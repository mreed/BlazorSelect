<Styled @bind-Classname="BlazorSelect_dropdownind">
    display:flex;
    padding:8px;
    transition:color 150ms;
    color: hsl(0,0%,40%);
    &:hover {
        color: hsl(0,0%,20%);
    }
</Styled>
<Styled @bind-Classname="BlazorSelect_dropdownsvg">
    display:inline-block;
    fill:currentcolor;
    line-height:1;
    stroke:currentColor;
    stroke-width:0
</Styled>
<div @onmousedown="OnMouseDown" @ontouchend="OnTouchEnd" class="@BlazorSelect_dropdownind">
     <svg height="20" width="20" viewBox="0 0 20 20" class="@BlazorSelect_dropdownsvg">
     <path d="M4.516 7.548c0.436-0.446 1.043-0.481 1.576 0l3.908 3.747 3.908-3.747c0.533-0.481 1.141-0.446 1.574 0 0.436 0.445 0.408 1.197 0 1.615-0.406 0.418-4.695 4.502-4.695 4.502-0.217 0.223-0.502 0.335-0.787 0.335s-0.57-0.112-0.789-0.335c0 0-4.287-4.084-4.695-4.502s-0.436-1.17 0-1.615z" />
  </svg>
</div>

@code {
    private string BlazorSelect_dropdownind, BlazorSelect_dropdownsvg;
    [Parameter]
    public EventCallback<MouseEventArgs> onmousedown { get; set; }
    [Parameter]
    public EventCallback<TouchEventArgs> ontouchend { get; set; }
    public string css ="display:flex;padding:8px;transition:color 150ms;";
    public string svgCss = "display:inline-block;fill:currentcolor;line-height:1;stroke:currentColor;stroke-width:0";
    protected async void OnMouseDown(MouseEventArgs e){
        await onmousedown.InvokeAsync(e);
    }
    protected async void OnTouchEnd(TouchEventArgs e){
        await ontouchend.InvokeAsync(e);
    }
}